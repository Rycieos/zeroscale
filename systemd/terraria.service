[Unit]
Description=Scaling Terraria Server
After=network-online.target

[Service]
Type=simple
User=terraria
Group=terraria
UMask=007
ExecStart=/opt/terraria/venv/bin/zeroscale terraria 7777 7778
KillSignal=SIGKILL
Restart=on-failure
# Configures the time to wait before service is stopped forcefully.
TimeoutStopSec=30

[Install]
WantedBy=multi-user.target
